@{
    ViewData["Title"] = "Review Claims";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Review Claims</h2>

    <p class="text-center mb-4">Here you can review and manage the submitted claims by lecturers. Use the actions provided to approve or reject each claim.</p>

    <!-- Claims table -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Lecturer Name</th>
                    <th scope="col">Hours Worked</th>
                    <th scope="col">Hourly Rate</th>
                    <th scope="col">Total</th>
                    <th scope="col">Document</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>John Doe</td>
                    <td>20</td>
                    <td>R30</td>
                    <td>R600</td>
                    <td><a href="#" class="btn btn-info btn-sm" data-bs-toggle="tooltip" title="View Document">View Document</a></td>
                    <td>
                        <button class="btn btn-success btn-sm me-2" data-bs-toggle="tooltip" title="Approve this claim">Approve</button>
                        <button class="btn btn-danger btn-sm" data-bs-toggle="tooltip" title="Reject this claim">Reject</button>
                    </td>
                </tr>
                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </div>
</div>

<!-- Include Bootstrap Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.2/font/bootstrap-icons.min.css" />

<!-- Include Bootstrap's JavaScript for tooltips -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    })
</script>
